        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryVariant">@color/normal_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_yellow</item>
        <item name="colorSecondaryVariant">@color/normal_yellow</item>
