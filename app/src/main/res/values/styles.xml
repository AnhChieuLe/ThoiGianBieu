<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="checkbox_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:button">@drawable/custom_checkbox</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:theme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>

    <style name="edittext_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="button_style" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/custom_button_ok</item>
        <item name="android:theme">@style/Theme.AppCompat.DayNight.NoActionBar</item>
    </style>

    <!-- Theme.AppCompat.Light.Dialog -->
</resources>