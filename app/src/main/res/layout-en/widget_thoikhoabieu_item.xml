<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_widget_thoikhoabieu"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:weightSum="300"
    android:elevation="50dp">
    <TextView
        android:id="@+id/tv_widget_thoikhoabieu_ngayhoc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:text="@string/date_demo"
        android:background="@drawable/background_title"
        android:paddingStart="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/background_sang"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:textColor="@color/text_color"
            android:text="@string/sang"
            android:gravity="center"
            android:textSize="14sp"/>
        <LinearLayout
            android:id="@+id/linear_sang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_thoikhoabieu_monhocsang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monhoc1_demo"
                android:gravity="start"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tv_ghichu_sang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:alpha="0.75"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@drawable/background_chieu"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_weight="3.5"
            android:text="@string/chieu"
            android:gravity="center"
            android:textSize="14sp"/>
        <LinearLayout
            android:id="@+id/linear_chieu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_thoikhoabieu_monhocchieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/monhoc1_demo"
                android:gravity="start"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tv_ghichu_chieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:alpha="0.75"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>