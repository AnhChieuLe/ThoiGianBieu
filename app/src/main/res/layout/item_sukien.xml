<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_sukien"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/cardElevation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/item_padding"
        android:background="@color/item_background">
        <TextView
            android:id="@+id/tv_sukien_tieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_event_demo"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="top|start"
            android:textColor="@color/text_title_yellow"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/text_title_yellow"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/tv_sukien_thoigian"
                android:alpha="0.25"/>
            <TextView
                android:id="@+id/tv_sukien_thoigian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="@string/time_event_demo"
                android:alpha="0.75"
                tools:ignore="SmallSp"
                android:paddingStart="5dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_sukien_noidung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noidung_event_demo"
            android:textSize="16sp"
            android:maxLines="6"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>