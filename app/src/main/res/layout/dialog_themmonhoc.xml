<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/corner_radius"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="45dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dialog_padding">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/them_mon_hoc"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>
            <EditText
                android:id="@+id/edt_monhoc_dialog_tenmonhoc"
                style="@style/edittext_style"
                android:hint="@string/themmonhoc_tenmonhoc"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/edt_monhoc_dialog_tengiangvien"
                style="@style/edittext_style"
                android:hint="@string/themmonhoc_tengiangvien"
                android:importantForAutofill="no" />
            <EditText
                android:id="@+id/edt_monhoc_dialog_phonghoc"
                style="@style/edittext_style"
                android:hint="@string/themmonhoc_phonghoc"
                android:importantForAutofill="no" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/tv_monhoc_dialog_ngaybatdau"
                    style="@style/edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/themmonhoc_ngaybatdau" />
                <TextView
                    android:id="@+id/tv_monhoc_dialog_ngayketthuc"
                    style="@style/edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/themmonhoc_ngayketthuc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:weightSum="7"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T2"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T2S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T2C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T3"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T3S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T3C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T4"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T4S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T4C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T5"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T5S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T5C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T6"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T6S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T6C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_T7"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T7S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T7C"
                        style="@style/checkbox_style" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/themmonhoc_CN"
                        android:textSize="@dimen/dayofweek_size"
                        android:textStyle="bold"/>
                    <android.widget.CheckBox
                        android:id="@+id/T1S"
                        style="@style/checkbox_style"/>
                    <android.widget.CheckBox
                        android:id="@+id/T1C"
                        style="@style/checkbox_style" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:id="@+id/edt_monhoc_dialog_sotuan"
                    style="@style/edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/themmonhoc_sotuan"/>
                <TextView
                    android:id="@+id/edt_monhoc_dialog_sobuoi"
                    style="@style/edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_marginBottom="0dp"
                    android:hint="@string/themmonhoc_sobuoi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="25dp">
                <android.widget.Button
                    android:id="@+id/btn_monhoc_huy"
                    style="@style/button_style"
                    android:layout_marginEnd="@dimen/button_margin"
                    android:background="@drawable/custom_button_cancel"
                    android:text="@string/huy"/>
                <android.widget.Button
                    android:id="@+id/btn_monhoc_them"
                    style="@style/button_style"
                    android:background="@drawable/custom_button_ok"
                    android:text="@string/them"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>